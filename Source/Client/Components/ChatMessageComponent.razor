@if (ChatMessage.IsSystem)
{
    <div class="mt-3 flex w-full justify-end">
        <div class="p-1 border-orange bg-white rounded border">
            <div>
                @ChatMessage.Text
            </div>
            <div class="flex justify-end">
                <h3 class="text-semibold mt-0.5 text-orange text-sm">Rahel rocket🚀</h3>
            </div>
        </div>

    </div>
}
else
{
    <div class="mt-3 flex w-full justify-start">
        <div class="p-1 border-grey-300 bg-white rounded border">
            @ChatMessage.Text
        </div>

    </div>
}


@code {
    [Parameter]
    public ChatMessageDTO ChatMessage { get; set; }
}
